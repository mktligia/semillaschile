<h1>Arreglos de Flores y Regalos de Saludos</h1>
<div class="container">
  <div class="d-flex justify-content-center aling-item-center">
    <% @products.each do |item| %>
      <div class="card-product ml-3">
           <%= cl_image_tag item.photo.key, height: 300, width: 400, crop: :fill %>
            <div class="card-product-infos">
              <h2><%=item.name%></h2>
              <p><%=item.content%></p>
              <h6>Precio: $ <%=item.price_cents%></h6>
              <%= link_to 'Ver mas', product_path(item.id)%>
            </div>
          </div>
      <%end%>
    </div>
</div>

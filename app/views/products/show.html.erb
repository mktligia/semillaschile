<div class="container">
  <div class="card-product-detalle ml-3">
     <%= cl_image_tag @product.photo.key, crop: :fill %>
    <div class="card-product-detalle-infos">
      <div class="product-description">
        <div class="text-center mt-5 mb-5">
          <h2><%=@product.name%></h2>
        </div>
        <div class="extra-margin">
          <p><%=@product.content%></p>
        </div>
        <div class="extra-margin">
          <h6>Precio $ <%=@product.price_cents%></h6>
        </div>
        <div class="d-flex justify-content-between extra-margin mb-5">
          <button type="button" class="btn btn-primary m-1" style="background-color:green;">Comprar</button>
          <!--<button type="button" class="btn btn-primary m-1"></button>-->
          <%= link_to'Volver', products_path, class:"btn btn-primary m-1"%>
          <%#= link_to'Comprar', new_order_path(product_id: @product.id), class:"btn btn-primary m-1"%>
          <%= form_with(url: new_order_path, method: :get) do |f| %>
            <%= f.hidden_field :product_id, value: @product.id %>
            <%= f.number_field :cantidad, value: "1", min: 1 %>
            <%= f.submit "Comprar" %>
          <% end -%>
        </div>
     </div>
  </div>
</div>

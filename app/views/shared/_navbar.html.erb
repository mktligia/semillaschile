  <!-- header -->
  <header>
      <!-- header inner -->
      <div class="header">
        <div class="container">
            <div class="row">
              <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                  <div class="full">
                    <div class="center-desk">
                        <div class="logo"> <a href=""> <%= image_tag("logotipo.png", :alt => "rss feed") %></a> </div>
                    </div>
                  </div>
              </div>
              <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                  <div class="menu-area">
                    <div class="limit-box">
                        <nav class="main-menu">
                          <ul class="menu-area-main">
                              <% if user_signed_in? %>
                                <li class="active">  <%= link_to "Home", root_path(), class: "nav-link" %> </li>
                                <li> <%= link_to "Productos", products_path(), class: "nav-link" %> </li>
              
                                <li><a href="#gallery">Galeria</a></li>
                                <li><a href="#contact">Contactanos</a></li>
                                <li class="nav-item dropdown">
                                <%= image_tag "https://w7.pngwing.com/pngs/875/311/png-transparent-computer-icons-user-login-chang-miscellaneous-grass-area.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <%if user_signed_in? %>
                                  <p class="dropdown-item" >  <%= current_user.email  %></p>
                                  <% end %>
                                  <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                                </div>
                                </li>
                       
                                
                                <% else %>
                                         <li class="active">  <%= link_to "Home", "#", class: "nav-link" %> </li>
                                          <li> <%= link_to "Productos", products_path(), class: "nav-link" %> </li>
                                          <li><a href="#gallery">Galeria</a></li>
                                          <li><a href="#contact">Contactanos</a></li>
                                            <li class="">
                                          <%= link_to "Tu cuenta", new_user_session_path, class: "" %>
                                        </li>
                                          <li class="last"><a href="#"> <%= image_tag("search_icon.png", :alt => "rss feed") %></a></li>
                                      
                                 <% end %>

                          </ul>
                        </nav>
                    </div>
                  </div>
              </div>
            </div>
        </div>
      </div>
      <!-- end header inner -->
  </header>
  <!-- end header -->
